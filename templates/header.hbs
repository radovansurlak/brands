<header class="header">
	<div class="header__wrapper">
		{{#link 'help_center'}}
		<img class="header__logo" src="{{settings.logo}}" alt="{{t 'home_page' name=help_center.name}}">
		{{/link}}
		<button class="header__menu-button" tabindex="0" type="button" aria-controls="user-nav" aria-expanded="false" aria-label="{{t 'toggle_navigation'}}"><img class="menu-button__image menu-button__image--visible"src="{{asset 'menu.svg'}}" alt="Menu button" role="presentation"><img class="menu-button__image--close"src="{{asset 'menu-close.svg'}}" alt="Menu button" role="presentation"></button>
		<nav class="header__nav">
			{{user_info}}
			{{link 'community'}}
			{{link 'new_request' class='header__button-link'}}
		</nav>
	</div>
</header>

